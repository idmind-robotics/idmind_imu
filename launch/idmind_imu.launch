<launch>
    <!--<node pkg="idmind_razor" type="idmind_imu.py" name="idmind_imu" output="screen" >-->
    <arg name="imu" default="razor" />
    <node pkg="idmind_imu" type="idmind_$(arg imu).py" name="idmind_imu" output="screen" >
        <remap from="imu" to="idmind_imu" />
        <remap from="imu/euler_string" to="idmind_imu/euler_string" />

        <rosparam file="$(find idmind_imu)/cfg/idmind_imu.yaml" command="load" />
        <param name="frame_id"      type="string"   value="base_link_imu" />
        <param name="calibration"      type="bool"     value="true" />
        <param name="relative"      type="bool"     value="true" />
    </node>

</launch>